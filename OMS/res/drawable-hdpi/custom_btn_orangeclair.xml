<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <stroke android:width="1dip" android:color="@color/OrangeOmsClair" />
             <gradient  android:angle="-90"  android:startColor="@color/OrangeOmsFonce" android:endColor="@color/OrangeOms"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <stroke android:width="1dip" android:color="@color/OrangeOmsClair2" />
             <solid  android:color="@color/OrangeOmsClair2"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <stroke android:width="1dip" android:color="@color/OrangeOmsClair" />
             <gradient  android:angle="-90"  android:startColor="@color/OrangeOmsClair2" android:endColor="@color/OrangeOmsClair" />            
         </shape>
     </item>
</selector>