<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <stroke android:width="1dip" android:color="@color/Orange3" />
             <gradient  android:angle="-90"  android:startColor="@color/Orange2" android:endColor="@color/Orange1"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <stroke android:width="1dip" android:color="@color/Orange3" />
             <solid  android:color="@color/Orange2"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <stroke android:width="1dip" android:color="@color/Orange3" />
             <gradient  android:angle="-90"  android:startColor="@color/Orange1" android:endColor="@color/Orange2" />            
         </shape>
     </item>
</selector>