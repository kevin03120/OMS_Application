<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <stroke android:width="1dip" android:color="@color/BleuOmsClair" />
             <gradient  android:angle="-90"  android:startColor="@color/BleuOmsFonce" android:endColor="@color/BleuOms"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <stroke android:width="1dip" android:color="@color/BleuOmsClair2" />
             <solid  android:color="@color/BleuOmsClair2"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <stroke android:width="1dip" android:color="@color/BleuOmsClair" />
             <gradient  android:angle="-90"  android:startColor="@color/BleuOmsClair2" android:endColor="@color/BleuOmsClair" />            
         </shape>
     </item>
</selector>