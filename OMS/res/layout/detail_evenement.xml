<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_border_detail_actu_event" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtTitreEvent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/association"
            android:textColor="@color/BleuOms"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/arrow_l_event"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:alpha="0.70"
                android:src="@drawable/arrow_l_blue" />

            <ImageView
                android:id="@+id/imgEvent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:contentDescription="@string/evenements" />

            <ImageView
                android:id="@+id/arrow_r_event"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:alpha="0.70"
                android:src="@drawable/arrow_r_blue" />
        </FrameLayout>

        <TextView
            android:id="@+id/infoTitre"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:background="@color/BleuOms"
            android:text="Informations"
            android:textColor="@color/NoirOms" />

        <TextView
            android:id="@+id/txtDetailEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/custom_border_text_actu_event"
            android:text="@string/association"
            android:textColor="@color/NoirOms" />

        <TextView
            android:id="@+id/assocTitre"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:background="@color/OrangeOms"
            android:text="Association Concernée"
            android:textColor="@color/NoirOms" />

        <TextView
            android:id="@+id/txtAssociationConcerne"
            style="@style/btnStyleBlue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/Blanc"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/lieuTitre"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:background="@color/OrangeOms"
            android:text="Lieu :"
            android:textColor="@color/NoirOms" />

        <TextView
            android:id="@+id/txtLieu1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/custom_border_text_actu_event"
            android:gravity="center"
            android:textColor="@color/BleuOms"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/equipementTitre"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:background="@color/OrangeOms"
            android:text="Equipement Concerné :"
            android:textColor="@color/NoirOms" />

        <TextView
            android:id="@+id/txtLieu2"
            style="@style/btnStyleBlue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/Blanc"
            android:visibility="invisible" />
    </LinearLayout>

</ScrollView>