<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_item_geoloc_association"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/Logo_adherent_geoloc_association"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/logo_ad"
        android:contentDescription="@string/logo_adherent"
        android:visibility="invisible" />
    
	    <TextView
	        android:id="@+id/nom_element_geoloc_association"
	        android:layout_width="0dp"
	        android:layout_weight="4"
	        android:layout_height="50dp"
	        android:gravity="center_vertical"
	        android:text="@string/association"
	        android:textColor="@color/NoirOms"
	        android:textStyle="bold" />
	    

    <TextView 
        android:id="@+id/distance_association"
	    android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="15sp"
        android:text="@string/association"
        android:textColor="@color/NoirOms"
        android:textStyle="italic|bold" />
</LinearLayout>
